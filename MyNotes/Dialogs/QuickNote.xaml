<Window x:Class="View.Dialogs.QuickNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Dialogs"
        mc:Ignorable="d"
        Title="QuickNote" Height="450" Width="350"
        DataContext="{Binding Path=QuickNoteViewModel, Source={StaticResource ViewModelLocator}}">
    <StackPanel>
        <materialDesign:Card Padding="10" Margin="10">
            <StackPanel>
                <TextBox Text="{Binding Title}" x:Name="CommentTextBox" materialDesign:HintAssist.Hint="Title" FontSize="20" />
                <TextBox Text="{Binding Note}" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" VerticalAlignment="Top"
                         AcceptsReturn="True" TextWrapping="Wrap" materialDesign:HintAssist.Hint="Your Quick Note!"/>
            </StackPanel>           
        </materialDesign:Card>
        
        <Button Margin="10,10" Style="{StaticResource MaterialDesignRaisedButton}" Command="{Binding SaveNoteCommand}" Width="100" Content="Save" HorizontalAlignment="Right" />
    </StackPanel>
</Window>
